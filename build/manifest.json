{
  "name": "cookie-robber",
  "manifest_version": 2,
  "version" : "0.1",
  "description" : "a developer's tool to bind different domain's cookie",
  "homepage_url": "https://github.com/ForeverSc/cookie-robber",
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "cookie.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "background",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*" 
  ],
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
