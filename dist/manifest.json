{
  "name": "cookie-robber",
  "manifest_version": 2,
  "version" : "1.0",
  "description" : "a developer's tool to bind different domain's cookie",
  "homepage_url": "https://github.com/ForeverSc/cookie-robber",
  "browser_action": {
    "default_icon": "logo.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "background",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*" 
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "128": "logo.png"
  }
}
